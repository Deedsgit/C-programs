#include<stdio.h>

void main()
{
    int  a1[4][4]={{2,3,4,5},{2,9,5,7},{5,4,3,8},{9,7,4,2}};
    int  a2[16];
    int i,j,k=0;

    for ( i = 0; i < 4; i++)
    {
        for ( j = 0; j < 4; j++)
        {
            printf("%d ",a1[i][j]);
        }
        printf("\n");
    }
    

    for ( i = 0; i < 4; i++)
    {
        for ( j = 0; j < 4; j++)
        {
        	a2[k]=a1[i][j];
        	k++;
        	
		}
	}
	printf("\nRow major:\n");
	for ( i = 0; i < 16; i++)
	{
		printf("%d ",a2[i]);	
	}
	k=0;
    for ( i = 0; i < 4; i++)
    {
        for ( j = 0; j < 4; j++)
        {
        	a2[k]=a1[j][i];
        	k++;
        	
		}
	}
	printf("\ncolumn major:\n");
	for ( i = 0; i < 16; i++)
	{
		printf("%d ",a2[i]);	
	}
	getch();
}
